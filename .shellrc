is_linux=
is_windows=
is_macos=
case $OSTYPE in
linux-gnu*) is_linux=1 ;;
darwin*) is_macos=1 ;;
cygwin | msys) is_windows=1 ;;
*) printf "ERROR: could not determine OS via \$OSTYPE\n" >&2 ;;
esac

# - - -

# ssh-agent socket path
export SSH_AUTH_SOCK="/run/user/1000/ssh-agent.socket"

# chosenim
export PATH="${PATH}:${HOME}/.nimble/bin"

# - - -

alias cr="container-run"
alias d="docker"
alias dco="docker-compose"
alias dri="docker run -i --rm"
alias drt="docker run -it --rm"
alias gf="git fetch"
alias ri="podman run -i --rm"
alias rit="podman run -it --rm"
alias ws="cd ~/workspace"
alias tsk="go-task"
alias px="pixi run"

# shell nav helper
alias ....='cd ../../..'
alias ...='cd ../..'
alias ..='cd ..'

# default opts for progs
alias grep="grep --color"
alias less="less -r"
alias ls="ls --color -GF"
alias ll="ls -ltrah"
alias mkdir="mkdir -p"
alias ssh="TERM=xterm ssh"
alias ip="ip -c=auto"

# shortcuts
alias -- '+'='sudo'
alias -- '-'='less'
alias \?='egrep'
alias z\?='zegrep'
alias ~='sed'
alias z@='zcat'

if [ $is_linux ] || [ $is_macos ]; then
    alias dmesg='dmesg -H'
    alias rn="ranger"

    if [ $is_linux ]; then
        alias svim="sudoedit"
    fi
elif [ $is_windows ]; then
    alias thu="explorer ."
fi

cdd() { cd "$(dirname "$1")"; }

f() {
    search=$1
    shift
    cmd="${1:-echo}"
    find . -iregex ".*$search" -type f -exec "$cmd" '{}' \; 2> >(grep -v "Permission denied")
}

gcl() {
    if [[ "$#" -lt 1 ]]; then
        echo "pass an URL to clone" >&2
        return 1
    fi
    url="$1"
    dir="${url##*/}"   # -> somerepo.git
    dir="${dir%.git}" # -> somerepo

    if [[ ! -d "$dir" ]]; then
        git clone "$url"
    fi
    cd "$dir"
}

nh() {
    tmpfile=$(mktemp)
    [ -z "$*" ] && {
        printf "give me a command to run\n"
        return 0
    }
    echo "stdout/stderr to ${tmpfile}"
    eval "nohup $* 1>\"${tmpfile}\" 2>&1"
}

man() {
    env \
        MANPAGER="less -R --use-color -Dd+y -Du+w -DS+ky -DP+kw -DE+kr" \
        MANROFFOPT="-P -c" \
        man "$@"
}

mkdirc() {
    mkdir "$1"
    cd "$1"
}

cdg() {
    local d
    d="$(pwd)"
    while [[ "$d" != "/" ]]; do
        if [[ -d "$d/.git" ]] || [[ -f "$d/.git" ]]; then
            # If .git is a file (worktree/submodule), read gitdir to locate actual dir,
            # but we still want the repo root 'd'
            cd "$d" >/dev/null 2>&1
            return 0
        fi
        d="$(dirname "$d")"
    done
    return 1
}

if [ -f "${HOME}/.shellrc.local" ]; then
    # shellcheck disable=SC1091
    source "${HOME}/.shellrc.local"
fi
