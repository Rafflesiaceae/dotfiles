#!/usr/bin/env bash
set -eo pipefail
while read -r user; do
    printf "%-30s: " "$user"
    git log --author="$user" --pretty=tformat: --numstat | \
        gawk '{ add += $1; subs += $2; loc += $1 - $2 } END { printf "added lines: %s removed lines: %s total lines: %s\n", add, subs, loc }' -
done < <(git log --format='%aN' | sort -u)
