#!/bin/bash
set -eo pipefail
tmpfile=$(mktemp)
cleanup_tmpfile() {
    rm "$tmpfile"
}
trap 'cleanup_tmpfile' EXIT INT

is_primary=
if [[ "$1" == "--primary" ]]; then
    is_primary=1
fi

xclip_sel=clipboard
if [[ "$is_primary" ]]; then
    xclip_sel=primary
fi

xclip -sel "$xclip_sel" -o >"$tmpfile"
"$EDITOR" + "$tmpfile"
truncate -s-1 "$tmpfile"
xclip -sel "$xclip_sel" -i <"$tmpfile"
if [[ "$is_primary" ]]; then
    xclip -sel "clipboard" -i <"$tmpfile"
fi
