#!/bin/bash
# DEPENDENCIES: swap-file
set -eo pipefail

debk() {
    after="$1"
    while true; do
        before=$after
        after=${before%.bk}
        [[ "$before" == "$after" ]] && break
    done
    echo "$after"
}

for file in "$@"; do
    if [[ ! -e "$file" ]]; then
        printf "bk: cannot backup '%s': No such file or directory\n" "$file" >&2
        exit 1
    fi

    if [[ "$file" == *".bk" ]]; then
        # restore
        og_file="$(debk "$file")"
        echo "$file → $og_file"
        if [[ -e "$og_file" ]]; then
            swap-file "$file" "$og_file"
        else
            mv -i "$file" "$og_file"
        fi
    else
        # backup
        bkfile="${file}.bk"
        while [[ -e "$bkfile" ]]; do
            bkfile="${bkfile}.bk"
        done

        echo "$file → $bkfile"
        mv -i "$file" "$bkfile"
    fi
done
