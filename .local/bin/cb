#!/bin/bash
die() {
    printf '%s\n' "$1" >&2
    exit "${2-1}"
}

usage() {
    echo "usage: cb [-i|--in] [-o|--out] [-s|--str <str>]"
    exit 1
}

usage_and_die() {
    printf '%s\n' "$1" >&2
    usage
}

cli_out=
cli_in=
cli_str=
cli_append=
while :; do
    case $1 in
        -h|-\?|--help)
            usage; exit ;;
        -a|--append)
            cli_append=1
            ;;
        -o|--out)
            cli_out=1
            ;;
        -i|--in)
            cli_in=1
            ;;
        -s|--str)
            cli_str=1
            ;;
        --)
            shift
            break
            ;;
        -?*) printf 'WARN: Unknown option (ignored): %s\n' "$1" >&2 ;;
        *) break ;;
    esac

    shift
done

clip_out() { xclip -sel clip -o; }
clip_in() { 
    if [[ $cli_append ]]; then
        inp=$(cat -)
        printf "%s%s" "$(clip_out)" "$inp" | xclip -sel clip -i
    else
        cat - | xclip -sel clip -i
    fi
}

if [[ $cli_out ]]; then
    clip_out
elif  [[ $cli_in ]]; then
    clip_in
elif  [[ $cli_str ]]; then
    printf "%s" "$1" | clip_in
elif  [[ -f $1 ]]; then
    cb < "$1"
else
    if [[ -t 0 ]]; then
        clip_out
    else
        clip_in
    fi
fi
