#!/bin/dash
die() {
    printf '%s\n' "$1" >&2
    exit "${2-1}"
}

usage() {
    echo "usage: cb [-a|--append] [-e|--edit] [-cf|--copyfile] [-i|--in] [-o|--out] [-s|--str <str>] [-t|--tee]"
    exit 1
}

usage_and_die() {
    printf '%s\n' "$1" >&2
    usage
}

cli_append=
cli_edit=
cli_copy_file=
cli_in=
cli_list=
cli_out=
cli_str=
cli_tee=
cli_path=
while :; do
    case $1 in
    -h | -\? | --help)
        usage
        ;;
    -a | --append)
        cli_append=1
        ;;
    -e | --edit)
        cli_edit=1
        ;;
    -cf | --copy-file)
        cli_copy_file=1
        [ ! "$2" ] && die "ERROR: '$1' requires a non-empty option argument."
        cli_path=$2
        shift || usage
        ;;
    -i | --in)
        cli_in=1
        ;;
    -l | --list)
        cli_list=1
        ;;
    -o | --out)
        cli_out=1
        ;;
    -s | --str)
        cli_str=1
        ;;
    -t | --tee)
        cli_tee=1
        ;;
    --)
        shift
        break
        ;;
    -?*) printf 'WARN: Unknown option (ignored): %s\n' "$1" >&2 ;;
    *) break ;;
    esac

    shift
done

clip_out() {
    xclip -sel clip -o
}
clip_in() {
    if [ $cli_copy_file ]; then
        dest=$(realpath "$cli_path")

        file_uri="$(
            python3 - "$dest" <<'PY'
import pathlib, sys
p = pathlib.Path(sys.argv[1]).resolve()
print(p.as_uri())
PY
        )"

        # Put "copy\n<file_uri>\n" onto the clipboard with the correct MIME type.
        # Chrome will accept Ctrl+V as a file upload from this.
        printf 'copy\n%s' "$file_uri" | xclip -selection clipboard -t x-special/gnome-copied-files
        printf '%s' "$file_uri" | xclip -selection clipboard -t text/uri-list

        exit 0
    fi

    if [ $cli_append ]; then
        inp=$(cat -)
        printf "%s%s" "$(clip_out)" "$inp" | xclip -sel clip -i
    elif [ $cli_tee ]; then
        stdin=$(cat)
        echo "$stdin"
        printf "%s" "$stdin" | xclip -sel clip -i
    else
        cat - | xclip -sel clip -i
    fi
}

if [ $cli_copy_file ]; then
    clip_in
elif [ $cli_list ]; then
    if [ -z "$1" ]; then
        xclip -selection clipboard -o -t TARGETS
    else
        xclip -selection clipboard -o -t "$1"
    fi
elif [ $cli_edit ]; then
    tmpfile=$(mktemp)
    cleanup_tmpfile() {
        rm -f "$tmpfile"
    }
    trap 'cleanup_tmpfile' EXIT INT
    clip_out >"$tmpfile"
    "$EDITOR" "$tmpfile"
    sed -z '$ s/\n$//' <"$tmpfile" | clip_in
elif [ $cli_out ]; then
    clip_out
elif [ $cli_in ]; then
    clip_in
elif [ $cli_str ]; then
    printf "%s" "$1" | clip_in
elif [ -f "$1" ]; then
    cb <"$1"
else
    if [ -t 0 ]; then
        clip_out
    else
        clip_in
    fi
fi
