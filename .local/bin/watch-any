#!/usr/bin/env bash
# Watches any file changes in the current directory and executes passed
# commands in case there are changes

die() {
    printf '%s\n' "$1" >&2
    exit 1
}

usage() {
    die "usage: watch-any [cmds]+"
}

if [ ! $# -gt 0 ]; then
    usage
fi

entr_pid=""

tmpfile=$(mktemp)
clean_tmpfile() {
    # echo "Bye Bye..."
    [ -n "$entr_pid" ] && kill "$entr_pid" 2>/dev/null
    rm -rf "$tmpfile"
    exit 0
}
trap 'clean_tmpfile; exit' INT EXIT

echo "[watch-any] $*"
# shellcheck disable=SC2016
buildcmd=('echo' '"[watch-any] [changed] $0"' '&&' "$@")

while true; do
    prune_expr=(
        -name .git -o
        -name .pixi -o
        -name build -o
        -name .idea -o
        -name .cache -o
        -name .task
    )

    if [ -n "$IGN" ]; then
        IFS=',' read -ra ignores <<< "$IGN"
        for ign in "${ignores[@]}"; do
            echo "[watch-any] [ignore] $ign"
            prune_expr+=(-o -name "$ign")
        done
    fi

    find . \
        \( "${prune_expr[@]}" \) -prune -o \
        \( \( -type d -o -name "*.*" \) -a ! -path . \) \
        -print \
        >"$tmpfile"

    entr -r -ds "${buildcmd[*]}" <"$tmpfile" &
    entr_pid=$!
    wait $entr_pid
done
