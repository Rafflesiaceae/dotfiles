[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[*.{sh,bash}]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[.gitmodules]
indent_style = tab

# serialization & markup

[*.{json,jsonl,json5}]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
indent_style = tab
trim_trailing_whitespace = false
